.main
  .image-box.slick
    = image_tag "https://www.mercari.com/jp/assets/img/common/jp/top/banner-camp.jpg"
    = image_tag "https://assets.st-note.com/production/uploads/images/8416298/rectangle_large_type_2_46ffcfccf4f8a9fb448290dafd69d2c1.jpg?fit=bounds&format=jpeg&quality=45&width=960"
  .pickup-box
    %h2.pickup-box__title ピックアップカテゴリー
    .pickup-box__new-items
      = link_to "レディース 新着アイテム", root_path, class: "pickup-box__new-items__title" 
      .items-container 
        -@items.each do |item|
          = link_to item_path(item), class: "item-box" do
            = image_tag("#{item.image.url}", width: '213',  height: '220', alt: "個別アイテム", class: "item-box__link")
            .item-box__text
              %h3.item-box__text__name 
                = item.name
              .item-box__text__number-box
                %p.item-box__text__number-box__price 
                  = item.price
                .item-box__text__number-box__like-box
                  = fa_icon "heart"
                  %span 10