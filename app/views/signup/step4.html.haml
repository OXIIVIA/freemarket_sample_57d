.scontainer
  .sheader
    %h1.sheader__logo
      = link_to "#"do
        =image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?128691313", alt: "mercari", class: "mercari-logo"
    %nav.progress-bar
      %ol.clearfix
        %li.through
          会員情報
          .progress-status
        %li.through
          電話番号認証 
          .progress-status
        %li.through
          お届け先住所入力
          .progress-status
        %li.active
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  %main.smain
    %section.smain__container
      %h2.smain__container__header 支払い方法
      = form_with url: step4_create_signup_index_path, method: :post, controler: "signup", action: "step4_create", id: 'charge-form' do |f|
        %input{name: "", type: "hidden", value: ""}
        .registration-form__content
          .registration-form__content__cardgroup
            %label{for: "name"}
              カード番号
            %span.registration-form__content__cardgroup__require
              必須
            .field-input
              = f.text_field :card_number, type: 'text', class: 'input-default', id: 'payment_card_no', placeholder: '半角数字のみ', maxlength: "16"
            -# %input{value:"", placeholder:"半角数字のみ", class: "input-default" ,type:"text"}
            %ul.registration-form__content__cardgroup--cardlist
              %li
                = image_tag"https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3312594182",class:"registration-form__content__cardgroup--cardlist__visa"
              %li
                = image_tag"https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?3312594182",class:"registration-form__content__cardgroup--cardlist__master"
              %li
                = image_tag"https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?3312594182",class:"registration-form__content__cardgroup--cardlist__saison"
              %li
                = image_tag"https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?3312594182",class:"registration-form__content__cardgroup--cardlist__jcb"
              %li
                = image_tag"https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?3312594182",class:"registration-form__content__cardgroup--cardlist__amex"
              %li
                = image_tag"https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?3312594182",class:"registration-form__content__cardgroup--cardlist__diners"
              %li
                = image_tag"https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?3312594182",class:"registration-form__content__cardgroup--cardlist__discover"
          .registration-form__content__cardgroup
            %label{for: "email"}
              有効期限
            %span.registration-form__content__cardgroup__require
              必須
            .expiration
              .expiration__select
                = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{}, class: "expiration__select__month", id: "payment_expiration_date_1i"
                %i.fas.fa-angle-down
              %span 月
              .expiration__select
                = f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{}, class: "expiration__select__year", id: "payment_expiration_date_2i"
                %i.fas.fa-angle-down
              %span 年
          .registration-form__content__cardgroup
            %label{for: "name"}
              セキュリティコード
            %span.registration-form__content__cardgroup__require
              必須
            .field-input
              = f.text_field :cvc, type: 'text', class: 'input-default', id: "payment_card_cvc", placeholder: 'カード背面4桁もしくは3桁の番号', maxlength: "4"
          .registration-form__content__creditgroup
            %p.registration-form__content__creditgroup--textright
              %span.registration-form__content__creditgroup--textright--blue--question ?
              %a.registration-form__content__creditgroup--textright--blue{href: "/jp/tos_list/", target: "_blank"}>カード裏面の番号とは？
          .registration-form__content__creditgroup
            = f.submit '登録を完了する', class: 'btn-default btn-default--red', id: 'token_submit'
  = render partial:"shared/regi_footer"