.scontainer
  .sheader
    %h1.sheader__logo
      = link_to "#"do
        =image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?128691313", alt: "mercari", class: "mercari-logo"
    %nav.progress-bar
      %ol.clearfix
        %li.active
          会員情報
          .progress-status
        %li
          電話番号認証 
          .progress-status
        %li
